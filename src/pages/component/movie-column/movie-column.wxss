@import "/pages/component/skeleton/skeleton.wxss";

.movie-item {display: flex;padding: 26rpx 0;margin: 0 25rpx;position: relative;}

.poster-wrapper{width: 185rpx;height: 220rpx;position: relative;overflow: hidden;}
.poster {width: 158rpx;height: 220rpx;border-radius: 4rpx;}

.info {flex: 1;width: 0;}
.title{display: flex;}
.name {font-size: 16px;color: #333;flex: 1;width: 0;}
.rating {width: 50px;text-align: right;font-size: 14px;color: #f16c00;}
.rating .value {font-size: 14px;font-weight: bold;}
.rating text {font-size: 10px;padding: 0 2px;}
.no_rating {font-size: 10px;color: #999;}

.tag {height: 46rpx;line-height: 40rpx;font-size: 12px;color: #999;padding-top: 12rpx;}


/* top sort style */
.sort {position: absolute;left: 0;top: 0;z-index: 1;line-height: 24rpx;width: 30rpx;text-align: center;}
.sort-bg {position: absolute;left: -50rpx;top: 0;width: 120rpx;height: 40rpx;transform: rotate(-45deg);background: #ADADAD;text-align: center;z-index: -1;}
.sort-value {color: #fff;font-size: 11px;}

.movie-item:nth-child(1) .sort-bg {background: #FF0000;}
.movie-item:nth-child(2) .sort-bg {background: #FF4500;}
.movie-item:nth-child(3) .sort-bg {background: #F4A460;}
.movie-item:nth-child(1) .sort-value {font-weight: bold;}