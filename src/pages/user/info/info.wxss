.content {background: #efefef;padding-top: 10px;}
.wrapper {margin-bottom: 10px;}
.item {display: flex;height: 50px;line-height: 50px;position: relative;background: #fff;}
.item .key {width: 100px;font-size: 14px;padding: 0 14px;color: #555;}
.item .value {flex: 1;text-align: right;}
.item .value text {font-size: 14px;color:#888;}
.avatar {width: 30px;height: 30px;border-radius: 50%;margin-top: 10px;}
.item .icon {width: 30px;text-align: right;}
.icon-right {font-size: 14px;color: #999;padding-right: 10px;}
